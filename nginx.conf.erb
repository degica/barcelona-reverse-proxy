user nginx;
worker_processes auto;

error_log  /var/log/nginx/error.log;
pid        /var/run/nginx.pid;

events {
  worker_connections  2048;
}

http {
  include       /etc/nginx/mime.types;
  default_type  application/octet-stream;

  log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                    '$status $body_bytes_sent "$http_referer" '
                    '"$http_user_agent" "$http_x_forwarded_for"';
  access_log    /var/log/nginx/access.log main;

  sendfile on;
#  tcp_nopush on;
#  tcp_nodelay on;

#  gzip  on;
#  gzip_static  on;
#  gzip_http_version 1.0;
#  gzip_comp_level 2;
#  gzip_proxied any;
#  gzip_types application/x-javascript application/xhtml+xml application/xml application/xml+rss text/css text/javascript text/plain text/xml;
#  gzip_vary on;
#  gzip_disable "MSIE [1-6].(?!.*SV1)";

  keepalive_timeout  5;
  server_tokens off;

  include /etc/nginx/conf.d/*.conf;

  upstream <%= ENV["UPSTREAM_NAME"] %> {
    server <%= ENV["UPSTREAM_NAME"] %>:<%= ENV["UPSTREAM_PORT"] %>;
  }

  server {
    listen 80 default_server;
    server_name _;

    keepalive_timeout 5;

    location / {
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header Host $http_host;
      proxy_redirect off;

      proxy_read_timeout 60;
      proxy_send_timeout 60;

      proxy_pass http://<%= ENV["UPSTREAM_NAME"] %>;
    }
  }
}
